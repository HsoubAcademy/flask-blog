{% extends "main/base.jinja" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="center">
                <div class="col-md-6 col-md-8 col-lg-6 ">
                    <h4>معلومات الدفع</h4>
                    <form id="subscribe-form"
                          class="payment-form shadow-lg bg-body rounded p-3 m-3"
                          method="post">
                        <legend>
                            تفاصيل الاشتراك:
                            <br/>
                            <small>عدد {{ sub_description }}</small>
                        </legend>
                        <hr/>
                        <div class="form-group">
                            <label for="user_email">البريد الإلكتروني:</label>
                            <input type="email"
                                   id="user_email"
                                   value="{{ current_user.email }}"
                                   class="form-control"
                                   readonly/>
                        </div>
                        <div class="form-group">
                            <label for="stripeCard">رقم البطاقة البنكية</label>
                            <div id="stripeCard" class="form-control">{# سيتم حقن عنصر سترايب ضمن هذا القسم #}</div>
                        </div>
                        <div class="form-group d-grid gap-2">
                            <div id="card-element-errors" role="alert"></div>
                            <button class="btn btn-outline-success classBtn"
                                    id="subBtn"
                                    data-cls="{{ client_secret }}">
                                <div class="spinner hidden" id="spinner"></div>
                                <span id="button-text">ادفع الآن</span>
                            </button>
                        </div>
                    </form>
                    <div class="result-message hidden">
                        <div class="alert alert-success d-flex align-items-center " role="alert">
                            <i class="fa-regular fa-circle-check"></i>
                            <div>تمت عملية الدفع بنجاح</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="module" src="{{ url_for('static', filename='js/payment.js') }}"></script>
{% endblock content %}
