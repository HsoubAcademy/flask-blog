{# form control #}
{% macro form_macro(filed_name) %}
    <div class="form-group">
        {{ filed_name.label(class='form-control-label') }}
        {{ filed_name(class="form-control form-control-lg") }}
        {% if filed_name.errors %}
            <ul class="error">
                {% for error in filed_name.errors %}<li class="text-danger">{{ error }}</li>{% endfor %}
            </ul>
        {% endif %}
    </div>
{% endmacro %}
{% macro box(box_title, description, box_value, percentage, box_icon) %}
    <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0">{{ box_title }}</p>
                            <h6 class="text-sm mb-0">{{ description }}</h6>
                            <h5 class="font-weight-bolder mb-0">
                                {{ box_value }} | <span class="text-sm font-weight-bolder {{ 'text-success' if percentage > 0 else 'text-danger' }}">{{ '%' ~ percentage | int }}</span>
                            </h5>
                        </div>
                    </div>
                    <div class="col-4">
                        <i class="{{ box_icon }}"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
{# navbar active #}
{% macro active(page_url) %}
    {% if request.path[1:] %}
        {{ 'active' if request.path[1:] == page_url }}
    {% endif %}
{% endmacro %}